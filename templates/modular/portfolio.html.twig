<section id="works" {% if page.header.secondaryBg %} class="secondary-bg" {% endif %}>
        <h2>{{ page.title }}</h2>
        {{ page.content }}
        {% if page.header.showFilter %}
        <ul>
            <li data-filter="all">All</li>
            {% for class in page.find('/portfolio').header.classes %}
            <li data-filter=".{{ class }}">{{ class }}</li>
            {% endfor %}
        </ul>
        {% endif %}
    {% if page.header.showAll %}
        <div class="portfolio">
            {% for page in page.find('/portfolio').children.order('date', 'desc') %}
            {% include 'partials/portfolio-item.html.twig' %}
            {% endfor %}
        </div>
    {% else %}
        <div class="portfolio">
            {% for page in page.find('/portfolio').children.order('date', 'desc').slice(0, 6) %}
            {% include 'partials/portfolio-item.html.twig' %}
            {% endfor %}
        </div>
    <a class="btn" href="portfolio">View Portfolio</a>
    {% endif %}
    </section>