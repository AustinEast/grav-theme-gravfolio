<p>
    {% if theme_var('email_toggle') %}
    <a href="mailto:{{ theme_var('email_link') }}">
        <i class="icon ion-email"></i>
    </a>
    {% endif %}
    {% if theme_var('facebook_toggle') %}
    <a href="{{ theme_var('facebook_link') }}">
        <i class="icon ion-social-facebook"></i>
    </a>
    {% endif %}
    {% if theme_var('twitter_toggle') %}
    <a href="{{ theme_var('twitter_link') }}">
        <i class="icon ion-social-twitter"></i>
    </a>
    {% endif %}
    {% if theme_var('github_toggle') %}
    <a href="{{ theme_var('github_link') }}">
        <i class="icon ion-social-github"></i>
    </a>
    {% endif %}
</p>